{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="myinscription">
                <h1> Connectez-vous : </h1>
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <label class="required">Adresse email</label>
                        <input placeholder="Adresse email ..." required name="_username" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                    <label class="required">Mot de passe</label>
                        <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion</button>
                        <p><a href="{{path('security_registration')}}">Je n'ai pas de compte</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}