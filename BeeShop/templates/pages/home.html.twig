{% extends 'base.html.twig' %}

{% block title 'BeeShop' %}
{% block body %}

<div class="slider-area">
		<div class="slider-wrapper owl-carousel">
			<div class="slider-item text-center home-one-slider-otem slider-item-four slider-bg-one">
				<div class="container">
					<div class="row">
						<div class="col-lg-12">
							<div class="slider-content-area">
								<div class="slide-text">
									<h1 class="homepage-three-title">{% trans %}Bienvenue sur{% endtrans %} <span>HoneyShop</span> !</h1>
									<h2>{% trans %}Le monde fou des abeilles et du miel{% endtrans %}</h2>
									<div class="slider-content-btn">
										<a class="btn11"  {% if (current_menu is defined and current_menu == 'properties') %} active {% endif %} href="{{path('produit.index')}}">{% trans %}Acheter{% endtrans %}<div class="transition"></div></a>
										<a class="btn11" {% if (current_menu is defined and current_menu == 'articles') %} active {% endif %} href="{{path('blog')}}">Blog<div class="transition"></div></a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="slider-item text-center home-one-slider-otem slider-item-four slider-bg-two">
				<div class="container">
					<div class="row">
						<div class="col-lg-12">
							<div class="slider-content-area">
								<div class="slide-text">
									<h1 class="homepage-three-title">Blog</h1>
									<h2>{% trans %}Venez decrouvrir notre blog !{% endtrans %}</h2>
									<div class="slider-content-btn">
										<a class="btn11" {% if (current_menu is defined and current_menu == 'articles') %} active {% endif %} href="{{path('blog')}}"><span>blog</span><div class="transition"></div></a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

    <div id="about" class="section wb">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="message-box">
                     
                        <h2>{% trans %}Bienvenue sur{% endtrans %} HoneyShop</h2>
                        <p> {% trans %}Venez visiter notre site. Vous pouvez commander directement des articles depuis notre boutique.{% endtrans %}</p>
						<p>  </p>
                        <p> {% trans %}Notre savoir-faire vous garantit l'excellence en terme de qualité.{% endtrans %}
						{% trans %}N'oubliez pas d'aller sur notre blog pour toutes les actualités !{% endtrans %}</p>

                    </div><!-- end messagebox -->
                </div><!-- end col -->

                <div class="col-md-6">
                    <div class="post-media wow fadeIn">
                        <img class="miel_image" src="images/miel.jpg" alt="" class="img-fluid img-rounded">
                     
                    </div><!-- end media -->
                </div><!-- end col -->
            </div><!-- end row -->

            <hr class="hr1"> 

            <div class="row">
				<div class="col-md-6">
                    <div class="message-box">
                        <h2>{% trans %}Notre service{% endtrans %}</h2>
                        <p class="lead">{% trans %}Nous sommes à votre service pour vous proposer les produits de meilleure qualité possible :{% endtrans %}</p>

                        <ul>
							<li><i class="fa fa-angle-double-right" aria-hidden="true"></i>{% trans %}Du miel sans aucun ajout{% endtrans %} </li>
							<li><i class="fa fa-angle-double-right" aria-hidden="true"></i>{% trans %}Une valeur sure{% endtrans %} </li>
							<li><i class="fa fa-angle-double-right" aria-hidden="true"></i>{% trans %}Nous vous garantissons une qualité supérieure{% endtrans %}</li>
						</ul>

                       
                    </div><!-- end messagebox -->
                </div><!-- end col -->
				
                <div class="col-md-6">
                    <div class="message-box">
                        <h2>{% trans %}Du miel made in france{% endtrans %}</h2>
                        <p class="lead">{% trans %}Pourquoi acheter du miel Français ?{% endtrans %}</p>

                        <p> 
						{% trans %}Pour développer l'apiculture française, sauver les abeilles et ainsi sauvegarder le potentiel de pollinisation si vital à notre agriculture. Pour garantir l'achat de produits de qualité : miel, gelée royale pure, bonbons au miel, pains d'épices, nonnettes grâce à la vente en ligne. Pour utiliser pleinement le formidable potentiel des terroirs français et le {% endtrans %}
						{% trans %}savoir-faire traditionnel des producteurs de miel{% endtrans %}
						</p>

    
                    </div><!-- end messagebox -->
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
    
{% endblock %} 