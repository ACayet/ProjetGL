{% extends 'base.html.twig'%}

{% block title property.nomProduit %}


{% block body %}
    <body>
        <section id="fiche-produit">
		<div class="container">
			<div class="row">
				<div class="col-lg-5">
					<a href="#"><img class="img-fluid" src="{{asset('images/miel.png')}}"/></a>
				</div>
				
				<div class="col-md-6">
					<div class="titles">
						<h2>{{property.nomProduit}}</h2>
					</div>
					<div class="col-md-offset-1">
						<div class="panel post-panel">
							<p> Description du produit : </p>
							<p> {{property.description}} </p>
                            <p> Quantité : {{property.quantite}} mL </p>            
                        </div>

						<div class="panel post-panel">
							<h2> Prix :  {{property.prix}} €</h2>
							<button type="button" class="btn btn-primary btn-lg active">Acheter</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}