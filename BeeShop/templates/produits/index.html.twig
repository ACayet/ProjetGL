{% extends 'base.html.twig'%}

{% block title 'Tous nos produits '%}

{% block body %}
    <body>
        <section id="fiche-produit">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="liste-title">
                            <h2>{% trans %}La boutique en ligne{% endtrans %} </h2>
                        </div>
                        
                        <div class="liste-description">
                            <p>{% trans %} Tous nos produits sont aussi disponibles dans notre point de vente{% endtrans %}
                                {% trans %}direct à un tarif préférentiel.{% endtrans %} </p>
                        </div>

                        {% for prop in produits %}
                            <div class="card col-sm-3">
                                <a href="{{ path('prop.show', {id: prop.idProduit, slug: prop.slug}) }}">
                                    <img class="card-img-op img-fluid" src="{{asset('images/miel.jpg')}}">
                                </a>

                                <div class="card-body"> 
                                    <h2 class="card-title">
                                        <a href="{{ path('prop.show', {id: prop.idProduit, slug: prop.slug}) }}"> 
                                            {{prop.nomProduit}} 
                                        </a>
                                    </h2>
                                    <p class="card-text">{{prop.prix}} €</p>
                                </div>
                            </div> 
                        {% endfor %}
                    </div>
                </div>
            </div>            
        </section>
    </body>
{% endblock %}