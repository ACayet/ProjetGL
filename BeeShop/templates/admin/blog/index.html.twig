{% extends 'base.html.twig'%}

{% block title 'Gérer le blog '%}

{% block body %}

{% if app.user.admin %}

        <section id="fiche-produit">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="liste-title">
                            <h1>Gestion du blog </h1>
                        </div>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{message}}
                            </div>
                        {% endfor %}
                        
                        <table class="table table-striped">
                            <tbody>
                                {% for art in articles %}
                                    <tr>
                                        <td> {{art.titre }} </td>

                                        <td>
                                            <a href="{{ path('admin.blog.edit', {id: art.id}) }}" class="btn btn-secondary"> Editer </a> 
                                             <form method="post" action="{{ path('admin.blog.delete', {id: art.id}) }}" 
                                                style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de supprimer ?')">
                                                <input type="hidden" name="_method" value="DELETE"/>
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete') }}"/>
                                                <button class="btn btn-danger"> Supprimer</button>
                                            </form>
                                        </td>        
                                    </tr>
                                {% endfor %}
                            </tbody>

                        </table>

                        <div class="text-right">
                            <a href="{{ path('admin.blog.new') }}" class="btn btn-primary"> Créer un nouvel article </a>
                        </div>

                    </div>
                </div>
            </div>            
        </section>

{% else %}
    <div class="container mt-4">
        <h1>Vous n'avez pas les droits pour accéder à cette page !</h1>
    </div>
{% endif %}

{% endblock %}